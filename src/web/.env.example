# API Configuration
# Base URL for backend API services - defaults to localhost for development
REACT_APP_API_URL=http://localhost:3000/api

# API version for endpoint versioning
REACT_APP_API_VERSION=v1

# API request timeout in milliseconds (30 seconds max as per API_CONSTANTS)
REACT_APP_API_TIMEOUT=30000

# Plaid Integration Settings
# Environment: sandbox/development/production (as per PLAID_CONFIG)
REACT_APP_PLAID_ENV=sandbox

# Your Plaid public key - NEVER commit actual key
REACT_APP_PLAID_PUBLIC_KEY=your_plaid_public_key

# Security Configuration
# AES-256 encryption key for sensitive data - NEVER commit actual key
REACT_APP_ENCRYPTION_KEY=your_encryption_key

# Third-party Service Integration
# Mixpanel analytics token - NEVER commit actual token
REACT_APP_MIXPANEL_TOKEN=your_mixpanel_token

# Error tracking configuration - NEVER commit actual DSN
REACT_APP_SENTRY_DSN=your_sentry_dsn

# Feature Flags
# Enable/disable features based on environment
REACT_APP_ENABLE_BIOMETRICS=true
REACT_APP_ENABLE_PUSH_NOTIFICATIONS=true
REACT_APP_ENABLE_INVESTMENT_FEATURES=true

# Performance Configuration
# Dashboard load time target of <3s as per requirements
REACT_APP_PERFORMANCE_TARGET_MS=3000

# Cache Configuration
# TTL in seconds for API response caching
REACT_APP_CACHE_TTL=300

# Rate Limiting
# Configured as per A.1.3 API Rate Limits
REACT_APP_RATE_LIMIT_WINDOW=60000
REACT_APP_MAX_REQUESTS_PER_WINDOW=100