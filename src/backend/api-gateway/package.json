{
  "name": "@mintclone/api-gateway",
  "version": "1.0.0",
  "description": "API Gateway service for Mint Clone application",
  "main": "dist/app.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "node dist/app.js",
    "dev": "nodemon src/app.ts",
    "build": "rimraf dist && tsc",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --coverageThreshold='{\"global\":{\"branches\":80,\"functions\":80,\"lines\":80,\"statements\":80}}'",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "prepare": "husky install",
    "docker:build": "docker build -t api-gateway .",
    "docker:run": "docker run -p 3000:3000 api-gateway",
    "clean": "rimraf dist coverage",
    "precommit": "npm run lint && npm run test"
  },
  "dependencies": {
    "express": "4.18.2",
    "helmet": "6.1.5",
    "cors": "2.8.5",
    "compression": "1.7.4",
    "express-rate-limit": "6.7.0",
    "rate-limit-redis": "3.0.0",
    "ioredis": "5.3.2",
    "winston": "3.8.2",
    "express-winston": "4.2.0",
    "express-validator": "7.0.1",
    "express-http-proxy": "1.6.3",
    "http-proxy-middleware": "2.0.6",
    "express-correlation-id": "^2.0.0",
    "express-timeout-handler": "^2.2.0",
    "dotenv": "16.0.3",
    "jsonwebtoken": "9.0.0",
    "morgan": "^1.10.0",
    "on-finished": "2.4.1",
    "prom-client": "14.2.0"
  },
  "devDependencies": {
    "typescript": "4.9.5",
    "@types/express": "4.17.17",
    "@types/node": "18.16.0",
    "@types/jest": "29.5.2",
    "jest": "29.0.0",
    "ts-jest": "29.1.0",
    "supertest": "6.3.3",
    "nock": "13.3.0",
    "eslint": "8.39.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-plugin-import": "^2.27.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "nodemon": "2.0.22",
    "husky": "8.0.3",
    "rimraf": "^5.0.0",
    "ioredis-mock": "8.2.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/organization/mint-clone.git"
  },
  "author": "Mint Clone Team",
  "license": "MIT"
}